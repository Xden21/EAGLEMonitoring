                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                    <ContentPresenter />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                            <lvc:CartesianChart Height="{Binding ElementName=AttPitchCanvas, Path=ActualHeight}" Width="{Binding ElementName=AttPitchCanvas, Path=ActualWidth}"
                                     Series="{Binding AttPitchSeries}" Hoverable="False" DataTooltip="{x:Null}"
                                            AnimationsSpeed="0:0:0.01" LegendLocation="None" Canvas.Top="5" Zoom="X" PreviewMouseDoubleClick="CartesianChart_PreviewMouseDoubleClick">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis FontSize="14" LabelFormatter="{Binding Formatter}"/>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis FontSize="14" LabelFormatter="{Binding Formatter}"/>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                        </Canvas>
                    </Grid>
                </Border>
            </TabItem>
